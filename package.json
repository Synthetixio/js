{
	"name": "@synthetixio/js",
	"version": "0.0.1",
	"description": "A library for interacting with Synthetix smart contracts",
	"main": "index.js",
	"browser": "index.browser.js",
	"license": "MIT",
	"scripts": {
		"build": "webpack --mode=production --max-old-space-size=4096",
		"lint": "eslint './src/**/*.{js,ts,tsx}' && tsc",
		"lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
		"test": "jest --forceExit --coverage --no-cache",
		"tsc": "tsc --noemit"
	},
	"author": {
		"name": "Synthetix"
	},
	"devDependencies": {
		"@babel/core": "7.11.0",
		"@babel/preset-env": "7.11.0",
		"@babel/preset-typescript": "7.10.4",
		"@types/lodash": "4.14.158",
		"@typescript-eslint/eslint-plugin": "3.8.0",
		"@typescript-eslint/parser": "3.8.0",
		"babel-jest": "26.2.2",
		"babel-loader": "8.1.0",
		"eslint": "7.6.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-import-resolver-typescript": "2.2.0",
		"eslint-plugin-import": "2.22.0",
		"eslint-plugin-prettier": "3.1.4",
		"husky": "4.2.5",
		"jest": "24.9.0",
		"lint-staged": "10.2.11",
		"prettier": "2.0.5",
		"ts-loader": "8.0.2",
		"typescript": "3.9.3",
		"webpack": "4.44.1",
		"webpack-cli": "3.3.12"
	},
	"dependencies": {
		"ethers": "5.0.7",
		"lodash": "4.17.19",
		"synthetix": "2.26.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./src/**/*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"jest": {
		"coverageThreshold": {
			"global": {
				"branches": 70,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		}
	}
}
